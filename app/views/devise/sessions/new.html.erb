<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
      
        <div class="">
          <h2>Log in</h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="filed">
            <div class="control">
              <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { class: "input" }, wrapper:false, label_html: {class:"label"} %>
            </div>          
          </div>
          <div class="filed">
            <div class="control">
              <%= f.input :password,
                        required: false, input_html: { class: "input" }, wrapper:false, label_html: {class:"label"} %>
            </div>          
          </div>
          <div class="filed">
            <div class="control">
              <%= f.input :remember_me, input_html: { class: "checkbox" }, wrapper:false, label_html: {class:"label"}, as: :boolean if devise_mapping.rememberable? %>  
            </div>          
          </div>

          <div class="field">
            <div class="control">
              <%= f.button :submit, "Log in", class:"button is-info" %>  
            </div>  
          </div>
        <% end %>
        <div class="field">
            <div class="control">
              <%= render "devise/shared/links" %>  
            </div>  
        </div>
        </div>
      </div>
      
      
      
    </div>
  </div>
</div>

