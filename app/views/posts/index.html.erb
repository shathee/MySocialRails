<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-one-quarter">
        <nav class="panel">
          <p class="panel-heading">Profile</p>
          <div class="panel-block">
            <article class="media">
              <div class="media-left">
                <figure class="image is-64x64">
                  <%= gravatar_image_tag(current_user.email, size:64, alt: current_user.name) %>
                </figure>
              </div>
              <div class="media-content">
                <div class="content">
                    <strong><%= current_user.name %></strong>
                    <small>@<%= current_user.username %></small>
                </div>
              </div>
            </article>  
          </div>
          <div class="panel-block">
            <div class="level-is-mobile">
              <div class="level-item has-centered-text">
                <div>
                  <p class="heading">Posts</p>
                  <p class="title-is-6"><%= current_user.post.count %></p>
                </div>
              </div>  
            </div>
          </div>  
        </nav>
      </div>
      <div class="column is-half">
        <article class="media box">
          <figure class="media-left">
            <p class="image is-64x64">
              <%= gravatar_image_tag(current_user.email, size:64, alt: current_user.name) %>
            </p>
          </figure>
          <div class="media-content">
            <%= render 'form', post: @post %>
          </div>
        </article>  
      
      <% @posts.each do |post| %>
        <div class="box">
          <article class="media">
            <div class="media-left">
              <figure class="image is-64x64">
                <%= gravatar_image_tag(post.user.email, size:64, alt: post.user.name) %>
              </figure>
            </div>
            <div class="media-content">
              <div class="content">
                <strong><%= post.user.name %></strong>
                <small>@<%= post.user.username %></small>
                <p><%= post.post %></p>

              </div>
              <nav class="level-left is-mobile">
                <%= link_to post, class: "level-item" do%>
                  <span class="icon">
                    <i class="fa fa-link" aria-hidden="true">View</i>
                  </span>
                <% end %>
                <% if current_user.email==post.user.email %>
                  <%= link_to edit_post_path(post),  class: "level-item" do %>
                    <span class="icon">
                      <i class="fa fa-pencil" aria-hidden="true">Edit</i>
                    </span>
                  <% end %>
                  <%= link_to post, method: :delete, data: { confirm: 'Are you sure?' } do%>
                    <span class="icon">
                      <i class="fa fa-trash-o" aria-hidden="true">Delete</i>
                    </span>
                  <% end %>
                <% end %>

              </nav>
            </div>
          </article>
        </div>  
      
      <% end %>
      </div>

      <div class="column">
        <nav class="panel">
          <h3 class="panel heading">
            You may know
          </h3>
        </nav>
        <div class="panel-block">
          <article class="media">
            <div class="media-left">
              <figure class="image is-32x32">
                <img src="https://bulma.io/images/placeholders/64x64.png" /> 
              </figure>
            </div>
            <div class="media-content">
              <div class="content">
                <p>
                  <strong>Name</strong>
                  <small>@name</small>
                </p>
              </div>
            </div>
          </article>
        </div>
      </div>

    </div>
  </div>
</section>

