<!DOCTYPE html>
<html>
  <head>
    <title>MySocial</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.con/font-awesome/4.7.0/css/fontawesome.min.css" %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar is-info">
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do %>
          <h1 class="title is-5">MySocial</h1>
        <% end %>  

        <div class="navbar-burger burger" data-target="navbarExample">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>
      <div id ="navbarExample" class="navber-menu navbar-menu-custom-full ">
        <div class="navbar-menu">
        <div class="navbar-start">
          <div class="navbar-item">
            <% if user_signed_in? %>
            <div class="buttons">
            <%= link_to 'New Post', new_post_path, class: "button is-info is-inverted" %> 
            </div>
            <% end %>
          </div>
        </div>

        <div class="navbar-end">
          <div class="navbar-item">
            <div class="buttons">
          <% if user_signed_in? %>
            <%= link_to current_user.name, edit_user_registration_path, class: "button is-info" %>
            <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "button is-info" %>
          <% else %>
            <%= link_to "Sign In", new_user_session_path, class: "button is-info" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "button is-info" %>
          <% end %>
            </div>
          </div>
        </div>
      </div>
        
      </div>
    </nav>
    
    <% if flash[:notice] %>
      <div class="notification is-primary global_notification">
        <p class="notice">
          <%= notice %>
        </p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="notification is-danger global_notification">
        <p class="alert">
          <%= alert %>
        </p>
      </div>
    <% end %>

    
    
    <%= yield %>
  </body>
</html>
